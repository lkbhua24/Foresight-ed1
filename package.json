{
  "name": "forsight",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "infra/*",
    "scripts"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "migrate:supabase": "tsx scripts/migrate-to-supabase.ts",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:node": "hardhat node",
    "hardhat:deploy": "hardhat run scripts/deploy.ts --network localhost",
    "hardhat:deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "hardhat:verify": "hardhat verify --network sepolia",
    "ws:dev": "npm run dev -w apps/web",
    "ws:build": "npm run build -w apps/web",
    "ws:contracts:compile": "npm run hardhat:compile",
    "ws:relayer:start": "npm run start -w services/relayer",
    "ws:relayer:build": "npm run build -w services/relayer",
    "ws:test": "npm run hardhat:test",
    "ws:dev:all": "concurrently -n web,relayer -c green,cyan \"npm run dev -w apps/web\" \"dotenv -e ./.env -e ./.env.local -- npm run start -w services/relayer\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@safe-global/safe-contracts": "^1.4.1-2",
    "@supabase/supabase-js": "^2.75.1",
    "@tanstack/react-query": "^5.90.5",
    "abdk-libraries-solidity": "^3.2.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "siwe": "^3.0.0",
    "solmate": "^6.8.0",
    "viem": "^2.38.3",
    "wagmi": "^2.18.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.14",
    "@tailwindcss/postcss": "^4",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chai": "^4.5.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.4",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "solidity-coverage": "^0.8.16",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5"
  }
}
